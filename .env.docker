# Docker Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=db
DB_NAME=church_officers_db
DB_USER=church_user
DB_PASSWORD=church_pass
DB_ROOT_PASSWORD=rootpassword
DB_PORT=3306

# Application Configuration
APP_ENV=production
APP_DEBUG=false
BASE_URL=http://localhost:8080

# Security Keys (IMPORTANT: Generate secure random strings)
MASTER_KEY=your-master-encryption-key-here-change-this
SESSION_SECRET=your-session-secret-key-here-change-this

# Timezone
TZ=Asia/Manila

# Upload Limits
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=20M

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=church_officers_db
MYSQL_USER=church_user
MYSQL_PASSWORD=church_pass
