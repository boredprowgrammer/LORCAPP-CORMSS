# Apache Configuration for LORCAPP-CORMSS
# For installation in /var/www/html/lorcapp/

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set the base directory for rewrites (adjust if installed in subdirectory)
    RewriteBase /lorcapp/
    
    # Force HTTPS (uncomment for production)
    # RewriteCond %{HTTPS} !=on
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
    
    # Prevent directory browsing
    Options -Indexes
    Options +FollowSymLinks
    
    # Set default charset
    AddDefaultCharset UTF-8
    
    # Protect hidden files (starting with .)
    <FilesMatch "^\.">
        Require all denied
    </FilesMatch>
    
    # Protect sensitive files
    <FilesMatch "\.(env|log|sql|md|git|gitignore|sh|json|lock)$">
        Require all denied
    </FilesMatch>
    
    # Block access to sensitive directories
    RewriteRule ^(config|includes|database|logs|vendor)/.*$ - [F,L]
    RewriteRule ^\.git - [F,L]
    
    # Allow access to assets directory
    RewriteRule ^assets/ - [L]
    
    # Allow access to palasumpaan template files
    RewriteRule ^palasumpaan_template/ - [L]
    
    # Allow access to lorcapp subdirectory
    RewriteRule ^lorcapp/ - [L]
    
    # If the request is for an existing file, serve it directly
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # If the request is for an existing directory, serve it directly
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Default: serve index.php for root requests
    RewriteRule ^$ index.php [L]
</IfModule>

# PHP settings (if allowed by server)
<IfModule mod_php.c>
    php_value upload_max_filesize 50M
    php_value post_max_size 50M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
</IfModule>

# Gzip compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/json
    AddOutputFilterByType DEFLATE application/javascript text/javascript
    AddOutputFilterByType DEFLATE text/xml application/xml
</IfModule>

# Browser caching for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Custom error pages
ErrorDocument 404 /lorcapp/maintenance.php
ErrorDocument 500 /lorcapp/maintenance.php?reason=config
ErrorDocument 503 /lorcapp/maintenance.php
